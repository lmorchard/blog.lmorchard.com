{
  "name": "blog.lmorchard.com",
  "version": "1.5.0",
  "description": "",
  "type": "module",
  "engines": {
    "node": ">=20.x"
  },
  "main": "index.js",
  "scripts": {
    "start": "npm-run-all --parallel serve watch",
    "serve-reload": "reload -v -w build -f index.html -d build -p 9980",
    "serve": "http-server -d true -i true -p 9980 build",
    "watch": "npm-run-all --parallel watch:*",
    "watch:posts": "onchange -v -i -d 1000 content/posts package.json index.js lib templates -- npm run build-posts-with-drafts",
    "watch:assets": "onchange -v -i -d 1000 content/public -- npm run build-assets",
    "build": "node index.js build && npm run build-search",
    "build-posts": "node index.js build-posts",
    "build-posts-with-drafts": "node index.js build-posts --show-drafts",
    "build-search": "pagefind --site build",
    "build-assets": "node index.js build-assets",
    "test": "echo \"Error: no test specified\" && exit 1",
    "stage": "npm-run-all --serial stage:build stage:deploy",
    "stage:build": "ABSOLUTE_BASE_URL=https://lmorchard.github.io/blog.lmorchard.com BASE_URL=/blog.lmorchard.com npm run build",
    "stage:deploy": "gh-pages -t -d build",
    "drafts": "npm run build && npm-run-all --parallel drafts:*",
    "drafts:watch": "onchange -v -i posts uploads -- node index.js build-posts 'posts/*-draft.md' 'posts/*-draft/index.md'",
    "drafts:serve": "reload -w posts -w build -f index.html -d build -p 9980"
  },
  "author": "Les Orchard <me@lmorchard.com>",
  "license": "MIT",
  "dependencies": {
    "cheerio": "^1.0.0-rc.6",
    "classnames": "^2.5.1",
    "commander": "^7.2.0",
    "commonmark": "^0.29.3",
    "escape-html": "^1.0.3",
    "front-matter": "^4.0.2",
    "gh-pages": "^6.1.1",
    "globby": "^11.0.3",
    "http-server": "^14.1.0",
    "marked": "^4.0.14",
    "mkdirp": "^1.0.4",
    "moment": "^2.29.1",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "pagefind": "^1.1.0",
    "recursive-copy": "^2.0.11",
    "reload": "^3.2.0",
    "rimraf": "^3.0.2",
    "watch": "^0.13.0"
  }
}
