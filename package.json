{
  "name": "ready-blog-oven",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "npm-run-all --parallel serve watch",
    "serve": "http-server -d true -i true -p 9980 build",
    "watch": "onchange -v -i -d 5000 package.json index.js lib templates public -- yarn run build",
    "build": "node index.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepare": "snowpack",
    "stage": "npm-run-all --serial stage:build stage:deploy",
    "stage:build": "ABSOLUTE_BASE_URL=https://lmorchard.github.io/blog.lmorchard.com/ BASE_URL=/blog.lmorchard.com yarn build",
    "stage:deploy": "gh-pages -t -d build"
  },
  "author": "Les Orchard <me@lmorchard.com>",
  "license": "MIT",
  "snowpack": {
    "installOptions": {
      "dest": "public/web_modules"
    }
  },
  "dependencies": {
    "cheerio": "^1.0.0-rc.3",
    "commander": "^5.1.0",
    "commonmark": "^0.29.1",
    "escape-html": "^1.0.3",
    "front-matter": "^4.0.0",
    "gh-pages": "^2.2.0",
    "globby": "^11.0.0",
    "http-server": "^0.12.3",
    "marked": "^1.1.0",
    "mkdirp": "^1.0.4",
    "moment": "^2.26.0",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.0.2",
    "recursive-copy": "^2.0.10",
    "reload": "^3.0.4",
    "rimraf": "^3.0.2",
    "snowpack": "^1.7.1",
    "watch": "^1.0.2"
  }
}
